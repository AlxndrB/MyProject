{
  "openapi" : "3.0.0",
  "info" : {
    "description" : "This API design set up so PolicyManager 2.0 can use the services from QBE.\nThe aim of the project is to make sure that a minimal list of data is shared between the application and the insurer services.\nFor more informations on Policy Manager see [https://www.aonpolicymanager.com/](www.aonpolicymanager.com).\n",
    "version" : "1.0.0",
    "title" : "Policy Manager 2.0",
    "termsOfService" : "http://swagger.io/terms/",
    "contact" : {
      "email" : "alexander.bouma@valuga.nl"
    },
    "x-logo" : {
      "url" : "https://raw.githubusercontent.com/AlxndrB/MyProject/master/Valuga_MainLogo-transparent_Logo-Red-1024x418.png",
      "backgroundColor\"" : null,
      "altText\"" : "valuga-logo"
    },
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers" : [ {
    "description" : "SwaggerHub API Auto Mocking",
    "url" : "https://virtserver.swaggerhub.com/AlxndrB/PolicyManager/1.0.0"
  }, {
    "url" : "tst.qbe.com/v1",
    "description" : "Test environment for QBE services"
  }, {
    "url" : "api.qbe.com/v1",
    "description" : "Production environment for QBE services"
  } ],
  "tags" : [ {
    "name" : "company",
    "description" : "Operations about companies"
  }, {
    "name" : "coverage",
    "description" : "Operations about coverages"
  } ],
  "paths" : {
    "/company/findcompany" : {
      "get" : {
        "tags" : [ "company" ],
        "summary" : "Find a company based on company attributes",
        "parameters" : [ {
          "in" : "query",
          "name" : "Company",
          "schema" : {
            "$ref" : "#/components/schemas/Company"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Succes",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Company"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/company/findcompany{CompanyId}" : {
      "get" : {
        "tags" : [ "company" ],
        "summary" : "Find company attributes based on the unique Id",
        "parameters" : [ {
          "name" : "CompanyId",
          "in" : "path",
          "description" : "Unique identifier provided by QBE",
          "required" : true,
          "schema" : {
            "type" : "integer"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Company"
                }
              }
            }
          }
        }
      }
    },
    "/coverages/{CompanyId}" : {
      "get" : {
        "tags" : [ "coverage" ],
        "summary" : "Get all coverages for a particular company",
        "parameters" : [ {
          "name" : "CompanyId",
          "in" : "path",
          "description" : "Unique **company** identifier provided by QBE",
          "required" : true,
          "schema" : {
            "type" : "integer"
          }
        } ],
        "responses" : {
          "404" : {
            "description" : "No company with that Id"
          },
          "200" : {
            "description" : "Success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Coverage"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/coverage/" : {
      "post" : {
        "tags" : [ "coverage" ],
        "summary" : "Request a  new coverage",
        "requestBody" : {
          "$ref" : "#/components/requestBodies/Coverage"
        },
        "responses" : {
          "200" : {
            "description" : "Success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Coverage"
                }
              }
            }
          }
        }
      },
      "put" : {
        "tags" : [ "coverage" ],
        "summary" : "Request an update/change in coverage",
        "requestBody" : {
          "$ref" : "#/components/requestBodies/Coverage"
        },
        "responses" : {
          "200" : {
            "description" : "Success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Coverage"
                }
              }
            }
          }
        }
      }
    },
    "/coverage/Cancel/{coverageId}" : {
      "put" : {
        "tags" : [ "coverage" ],
        "summary" : "Cancel the coverage",
        "parameters" : [ {
          "name" : "coverageId",
          "in" : "path",
          "description" : "Unique **coverageId** identifier provided by QBE",
          "required" : true,
          "schema" : {
            "type" : "integer"
          }
        } ],
        "responses" : {
          "404" : {
            "description" : "No coverage with that Id"
          },
          "200" : {
            "description" : "Success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "object",
                  "properties" : {
                    "status" : {
                      "type" : "string",
                      "enum" : [ "Accepted", "Declined", "Pending" ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/coverage/portfolio" : {
      "get" : {
        "tags" : [ "coverage" ],
        "summary" : "Gets the portfolio",
        "responses" : {
          "200" : {
            "description" : "Success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "object",
                  "properties" : {
                    "companies" : {
                      "description" : "Companies list with coverages",
                      "type" : "array",
                      "items" : {
                        "$ref" : "#/components/schemas/Company"
                      }
                    },
                    "coverages" : {
                      "description" : "Coverages",
                      "type" : "array",
                      "items" : {
                        "$ref" : "#/components/schemas/Coverage"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "externalDocs" : {
    "description" : "Find out more about Swagger",
    "url" : "http://swagger.io"
  },
  "components" : {
    "schemas" : {
      "Company" : {
        "type" : "object",
        "required" : [ "id" ],
        "properties" : {
          "id" : {
            "type" : "integer",
            "description" : "Must be unique per company"
          },
          "name" : {
            "type" : "string"
          },
          "registrationNumber" : {
            "type" : "array",
            "description" : "List of registration numbers for this company",
            "items" : {
              "type" : "object",
              "properties" : {
                "type" : {
                  "type" : "string",
                  "example" : "VAT BE"
                },
                "Number" : {
                  "type" : "string",
                  "example" : "0690.537.456"
                }
              }
            }
          },
          "address" : {
            "type" : "string"
          },
          "rating" : {
            "type" : "integer"
          },
          "zipcode" : {
            "type" : "string"
          },
          "countrycode" : {
            "description" : "ISO 3166-1 alpha-3",
            "type" : "string"
          }
        }
      },
      "Coverage" : {
        "type" : "object",
        "required" : [ "uid", "companyId", "type", "policyId" ],
        "properties" : {
          "uid" : {
            "type" : "string",
            "description" : "Must be unique per cover",
            "default" : "0"
          },
          "companyId" : {
            "type" : "integer",
            "description" : "Company identifier provided by QBE"
          },
          "policyId" : {
            "type" : "string",
            "description" : "Policy identifier"
          },
          "type" : {
            "type" : "string",
            "default" : "Credit limit",
            "enum" : [ "Credit limit", "Rating limit", "Credit check" ]
          },
          "status" : {
            "type" : "string",
            "default" : "Accepted",
            "description" : "Status for the coverage",
            "enum" : [ "Accepted", "Declined", "Pending" ]
          },
          "startDate" : {
            "type" : "string",
            "format" : "date",
            "example" : "1990-09-25",
            "description" : "Start date of the cover"
          },
          "endDate" : {
            "type" : "string",
            "format" : "date",
            "example" : "2019-09-25",
            "description" : "Up to and including date of the cover"
          },
          "requested" : {
            "type" : "number",
            "example" : "12345.67",
            "description" : "Requested amount for coverage"
          },
          "received" : {
            "type" : "number",
            "example" : "12345.67",
            "description" : "Received amount for coverage"
          },
          "comments" : {
            "type" : "array",
            "description" : "Underwriter comments",
            "items" : {
              "type" : "string"
            }
          },
          "decisionCodes" : {
            "description" : "Decisioncodes of the cover",
            "type" : "array",
            "items" : {
              "type" : "string"
            }
          }
        }
      }
    },
    "requestBodies" : {
      "Coverage" : {
        "content" : {
          "application/json" : {
            "schema" : {
              "$ref" : "#/components/schemas/Coverage"
            }
          }
        },
        "description" : "Coverage item. If there is already a cover active it should try to request an update/change of the active cover",
        "required" : true
      }
    },
    "responses" : {
      "UnauthorizedError" : {
        "description" : "Authentication information is missing or invalid",
        "headers" : {
          "WWW_Authenticate" : {
            "schema" : {
              "type" : "string"
            }
          }
        }
      }
    }
  },
  "security" : [ {
    "basicAuth" : [ ]
  } ]
}
